@{
    ViewBag.Title = "CadastroUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/app/Usuario/EditUsuarioController.js"></script>
<div class="container">
    <div class="row row-centered">
        <div class="col-md-10 col-centered">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">CADASTRO</h3>
                </div>
                <div class="panel-body row-centered">
                    <form class="form-horizontal" role="form" ng-controller="EditUsuarioController" name="FormCad" id="FormCad" novalidate ng-submit="FormCad.$valid && submit()">
                        <div class="form-group">
                            <label for="nome" class="col-sm-2 control-label">Nome</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="Nome" placeholder="Nome" ng-model="Usuario.Nome" required width="10px" />
                            </div>
                            <div class="col-sm-3 control-group error" ng-if="(FormCad.Nome.$touched || FormCad.$submitted) && FormCad.Nome.$invalid">
                                <ng-messages for="FormCad.Nome.$error" role="alert">
                                    <ng-message when="required">
                                        <span class="alert alert-danger" ng-show="FormCad.Nome.$error.required">Campo Requerido</span>
                                    </ng-message>
                                </ng-messages>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="RG" class="col-sm-2 control-label">RG</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="RG" placeholder="RG" ng-model="Usuario.RG" required />
                            </div>
                            <br />
                            <div class="col-centered control-group error" ng-if="(FormCad.RG.$touched || FormCad.$submitted) && FormCad.RG.$invalid">
                                <ng-messages for="FormCad.RG.$error" role="alert">
                                    <ng-message when="required">
                                        <span class="alert alert-danger" ng-show="FormCad.RG.$error.required">Campo Requerido</span>
                                    </ng-message>
                                    <ng-message when="RG" ng-show="FormCad.RG.$error.RG">
                                        <span class="alert alert-danger">RG inválido</span>
                                    </ng-message>
                                </ng-messages>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="login" class="col-sm-2 control-label">Login</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="Login" placeholder="Login" ng-model="Usuario.Login" ng-pattern="/^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$/" required />
                            </div>
                            <br />
                            <div class="col-sm-6 control-group error" ng-if="(FormCad.Login.$touched || FormCad.$submitted) && FormCad.Login.$invalid">
                                <ng-messages for="FormCad.Login.$error" role="alert">
                                    <ng-message when="required">
                                        <span class="alert alert-danger" ng-show="FormCad.Login.$error.required">Campo Requerido</span>
                                        <div ng-message="pattern">
                                            <span class="alert alert-danger" ng-show="FormCad.Login.$error.pattern">Inf 10 digitos</span>
                                        </div>
                                    </ng-message>
                                </ng-messages>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="senha" class="col-sm-2 control-label">Senha</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="Senha" placeholder="senha" ng-model="Usuario.Senha" ng-pattern="/^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$/" required />
                            </div>
                            <br />
                            <div class="col-sm-6 control-group error" ng-if="(FormCad.Senha.$touched || FormCad.$submitted) && FormCad.Senha.$invalid">
                                <ng-messages for="FormCad.Senha.$error" role="alert">
                                    <ng-message when="required">
                                        <span class="alert alert-danger" ng-show="FormCad.Senha.$error.required">Campo Requerido</span>
                                        <div ng-message="pattern">
                                            <span class="alert alert-danger" ng-show="FormCad.Senha.$error.pattern">Inf 10 digitos</span>
                                        </div>
                                    </ng-message>
                                </ng-messages>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-8">
                                <button type="submit" class="btn btn-default">Salvar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

