@{
    ViewBag.Titulo = "Cadastro de Campo";
    ViewBag.Descricao = "Cadastro ou edição de campos";
    ViewBag.Caminho = "Campo";
}
<script src="~/app/Campos/EditCampoController.js"></script>

<section class="content" ng-controller="EditCampoController">
    <div class="row">
        <!-- left column -->
        <!-- form start -->
        <!-- general form elements -->
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Dados de Campo</h3>
                <div class="box-tools pull-right">
                </div>
            </div>
            <form role="form" name="frmCampo" novalidate>
                <div class="box-body">
                    <input type="hidden" class="form-control" ng-model="CAMPO.ID">
                    <div class="form-group" show-errors="{ showSuccess: true }">
                        <label>Nome</label>
                        <input name="txtNome" type="text" class="form-control" ng-model="CAMPO.Nome" placeholder="Informe o Nome" required>
                        <p class="help-block" ng-if="frmCampo.txtNome.$error.required">Informe o nome do campo</p>
                    </div>
                </div>
                <input type="hidden" class="form-control" ng-model="CAMPO.ATIVO">
            </form>

            <!-- /.box-body -->
            <div class="box-footer">
                <button type="button" class="btn btn-primary" ng-click="salvaCampo()">Gravar</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Lista de Campos</h3>
                <div class="box-tools pull-right">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                    <div ui-grid="gridCampos" ui-grid-selection class="myClass" ui-grid-resize-columns></div>
                </div>
            </div>
        </div>
    </div>
    <div class="example-modal">
        <div class="modal modal-warning" id="modalDeletar" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Exclusão de Campo</h4>
                    </div>
                    <div class="modal-body">
                        <p>Tem certeza que deseja Excluir o Campo <bold>{{CAMPO.Nome}} ?</bold> </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-outline" ng-click="Del()" data-dismiss="modal">Continuar</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>
    <!-- /.example-modal -->
</section>

